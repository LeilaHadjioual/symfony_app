{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Projet</h1>

        <table class="table table-hover">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ projet.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projet.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if projet.date %}{{ projet.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nom auteur</th>
                <td>{{ projet.nomAuteur }}</td>
            </tr>
            </tbody>
        </table>
        <div class="btn-group-vertical">
            <a href="{{ path('projet_index') }}">
                <button type="submit" class="btn btn-info">Back to the list</button>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('projet_edit', { 'id': projet.id }) }}">
                <button class="btn btn-info">Edit</button>
            </a>

        </div>
        {{ form_start(delete_form) }}
        <input class="btn btn-danger" type="submit" value="Delete">
        {{ form_end(delete_form) }}
        {% endif %}
    </div>
{% endblock %}
